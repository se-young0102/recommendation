<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9FF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="북북"
        android:textColor="#664FA3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:background="#E7DBE9"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- 내가 읽은 도서 타이틀 -->
    <TextView
        android:id="@+id/readBooksTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내가 읽은 도서"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <!-- 책 이미지 3개 가로 배치 -->
    <ImageView
        android:id="@+id/bookA"
        android:layout_width="105dp"
        android:layout_height="107dp"
        app:layout_constraintTop_toBottomOf="@id/readBooksTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/baseline_book_24"
        app:tint="#C1ACE6" />

    <ImageView
        android:id="@+id/bookB"
        android:layout_width="105dp"
        android:layout_height="107dp"
        app:layout_constraintTop_toBottomOf="@id/readBooksTitle"
        app:layout_constraintStart_toEndOf="@id/bookA"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/baseline_book_24"
        app:tint="#A794C8" />

    <ImageView
        android:id="@+id/bookC"
        android:layout_width="105dp"
        android:layout_height="107dp"
        app:layout_constraintTop_toBottomOf="@id/readBooksTitle"
        app:layout_constraintStart_toEndOf="@id/bookB"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/baseline_book_24"
        app:tint="#72628E" />

    <!-- 책 제목 텍스트들 -->
    <TextView
        android:id="@+id/bookAText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        app:layout_constraintTop_toBottomOf="@id/bookA"
        app:layout_constraintStart_toStartOf="@id/bookA"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/bookBText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        app:layout_constraintTop_toBottomOf="@id/bookB"
        app:layout_constraintStart_toStartOf="@id/bookB"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/bookCText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        app:layout_constraintTop_toBottomOf="@id/bookC"
        app:layout_constraintStart_toStartOf="@id/bookC"
        android:layout_marginTop="8dp" />

    <!-- 나의 도서 폴더 타이틀 -->
    <TextView
        android:id="@+id/folderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 도서 폴더"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bookAText"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 폴더 이미지 2개 가로 배치 -->
    <ImageView
        android:id="@+id/folder1"
        android:layout_width="98dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/folderTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/baseline_folder_24"
        app:tint="#BFABE4" />

    <ImageView
        android:id="@+id/folder2"
        android:layout_width="98dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/folderTitle"
        app:layout_constraintStart_toEndOf="@id/folder1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/baseline_folder_24"
        app:tint="#A693C6" />

    <!-- 하단 버튼 3개 수평 중앙에 배치 -->
    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="도서추천"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="홈"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintEnd_toStartOf="@id/button"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="기록하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
